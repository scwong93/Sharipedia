<h1><%= @wiki.title %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= markdown(@wiki.body) %></p>
  </div>
  <div class="col-md-4">
    <% if authorize_update %>
      <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
    <% end %>
    <% if authorize_delete %>
      <%= link_to "Delete", @wiki, method: :destroy, class: 'btn btn-danger', data: {confirm: 'Are you sure?'} %>
    <% end %>
  </div>
</div>
